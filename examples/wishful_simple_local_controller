   ./wishful_simple_local_controller -v --config ./config.yaml 

Other options:
   -h, --help          show this help message and exit
   -q, --quiet         print less text
   -v, --verbose       print more text
   --version           show version and exit
"""

import datetime
import logging
import wishful_controller
import gevent
import wishful_framework as msgs
import wishful_upis as upis

__author__ = "Piotr Gawlowicz, Mikolaj Chwalisz"
__copyright__ = "Copyright (c) 2015, Technische Universit√§t Berlin"
__version__ = "0.1.0"
__email__ = "{gawlowicz, chwalisz}@tkn.tu-berlin.de"



log = logging.getLogger('wishful_agent.main')
controller = wishful_controller.Controller(dl="tcp://127.0.0.1:8990", ul="tcp://127.0.0.1:8989")
nodes = []


@controller.new_node_callback()
def printNodeName(group, nodeId, name, info):
    nodes.append(nodeId)
    print "New Node : Group : {} NodeID : {} Name : {}  Info : {}".format(group, nodeId, name, info)


@controller.node_exit_callback()
def printNodeName(group, nodeId, reason):
    if nodeId in nodes:
        del nodes[nodeId]
    print "NodeExit : Group : {} NodeID : {} Reason : {}".format(group, nodeId, reason)


@controller.add_callback("routers", upis.radio.set_channel)
def ath9k_reponse(group, nodeId, data):
    print "Received response : Group:{}, NodeId:{}, msg:{}".format(group, nodeId, data)
    
    controller.nodes(nodeId).delay(3).net.start_iperf_server(port=1234)


@controller.add_callback("routers", upis.net.start_iperf_server)
def iperf_reponse(group, nodeId, data):
    print "Received response : Group:{}, NodeId:{}, msg:{}".format(group, nodeId, data)


def print_set_channel_response(group, nodeId, data):
    print "Print set_channel response : Group:{}, NodeId:{}, Result:{}".format(group, nodeId, data) 



def main(args):
    log.debug(args)

    config_file_path = args['--config']
    controller.load_modules(controller.read_config_file(path=config_file_path))
    controller.start()
   
    #control loop
    while True:
        gevent.sleep(10)
        print "Connected nodes", nodes
        if nodes:
            #execute non-blocking function immediately
            #controller.nodes(nodes[0]).radio.set_channel(11)

            #execute non-blocking function immediately, with specific callback
            #controller.nodes(nodes[0]).callback(print_set_channel_response).radio.set_channel(11)

            #schedule non-blocking function 
            exec_time = datetime.datetime.now() + datetime.timedelta(seconds=3)
            controller.nodes(nodes[0]).exec_time(exec_time).radio.set_channel(4)

            #execute blocking function immediately
            #result = controller.nodes(nodes[0]).blocking(True).radio.set_channel(11)
            #print result


if __name__ == "__main__":
    try:
        from docopt import docopt
    except:
        print("""
        Please install docopt using:
            pip install docopt==0.6.1
        For more refer to:
        https://github.com/docopt/docopt
        """)
        raise

    args = docopt(__doc__, version=__version__)

    log_level = logging.INFO  # default
    if args['--verbose']:
        log_level = logging.DEBUG
    elif args['--quiet']:
        log_level = logging.ERROR

    logging.basicConfig(level=log_level,
        format='%(asctime)s - %(name)s.%(funcName)s() - %(levelname)s - %(message)s')

    main(args)
    if 0:
        try:
            main(args)
        except KeyboardInterrupt:
            log.debug("Controller exits")
        except:
            log.debug("Unexpected error:".format(sys.exc_info()[0]))
        finally:
            log.debug("Exit")
            controller.kill()